<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>ARC</title>

    <%- include("./partials/stylesheets.ejs") %>

    <link rel="stylesheet" href="/css/countdown-timer.css">

</head>

<body>

    <%- include("./partials/navigation.ejs") %>

    <div class="container">
        <% if (typeof results != 'undefined') { %>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-12">
                            <div id="wrapper">
                                <div class="container">
                                    <h1>Koniec testu!</h1>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td>Punkty</td>
                                            <td><strong><%= results.points %> / <%= results.maxPoints %></strong></td>
                                        </tr>
                                        <tr>
                                            <td>Data rozpoczęcia testu</td>
                                            <td><strong id="start-date"><%= results.dateStarted %></strong></td>
                                        </tr>
                                        <tr>
                                            <td>Data zakończenia testu</td>
                                            <td><strong id="end-date"><%= results.dateFinished %></strong></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">
                            <p><strong>Słowo</strong></p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Tłumaczenie</strong></p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Odpowiedź</strong></p>
                        </div>
                        <hr>
                    </div>
                        <% for (let word of Object.keys(results.words)) { %>
                            <div class="row">
                                <div class="col-md-4"><%= word %></div>
                                <div class="col-md-4"><%= results.words[word].translation %></div>
                                <div class="col-md-4">
                                    <% if (results.words[word].correct) { %>
                                        <p style="color: green"><%= results.words[word].answer %>&nbsp;<i class="fa fa-check"></i></p>
                                    <% } else { %>
                                        <p style="color: red"><%= results.words[word].answer %>&nbsp;<i class="fa fa-close"></i></p>
                                    <% } %>
                                
                                </div>
                            </div>
                        <% } %>
                    
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-danger" role="alert"><span>Nie powinno Cię tu być :)</span></div>
        <% } %>
    </div>

    <%- include("./partials/footer.ejs") %>
    <%- include("./partials/scripts.ejs") %>

</body>

</html>