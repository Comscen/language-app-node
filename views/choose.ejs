<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Comscelingo</title>

    <%- include("./partials/stylesheets.ejs") %>

</head>

<body>

    <%- include("./partials/navigation.ejs") %>

    <div class="container">
        <form method="POST">
            <div class="form-row">
                <div class="col">
                    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Word</th>
                                <th>Translation</th>
                                <th>Frequency</th>
                                <th>Add to database</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let word of Object.keys(results)) { %>
                                <tr>
                                    <td style="width: 40%;"><%= word %></td>
                                    <td style="width: 40%;"><%= results[word].translation %></td>
                                    <td style="width: 5%;"><%= results[word].priority %></td>
                                    <td style="width: 15%;"><input type="checkbox" checked/></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="form-row">
                <div class="col" style="text-align: center;margin-top: 10px;">
                    <input type="submit" class="btn btn-primary border-white" style="background: #56c6c6;width: 70%;">Add selected words to database</input>
                </div>
            </div>
        </form>
    </div>

    <%- include("./partials/footer.ejs") %>

    <%- include("./partials/scripts.ejs") %>

</body>

</html>